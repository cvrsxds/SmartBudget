<Window x:Class="SmartBudget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartBudget"
        mc:Ignorable="d"
        Title="SmartBudget" Height="237" Width="400">
    <Grid Margin="0,0,0,9">
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <!-- Верхнее пространство -->
            <RowDefinition Height="25*"/>
            <!-- Нижние кнопки -->
        </Grid.RowDefinitions>

        <TextBlock Text="Добро пожаловать                         в Currency Conventer"
               TextWrapping="Wrap"
               FontSize="24"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" Height="63" Width="244"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="90" Width="380">
            <Button Content="Вход"
                Width="150"
                Height="50"
                FontSize="16"
                Margin="20"
                Click="LoginButton_Click"/>
            <Button Content="Регистрация"
                Width="150"
                Height="50"
                FontSize="16"
                Margin="20"
                Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
