<Window x:Class="SmartBudget.Pages.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="527" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Логин:" Grid.Row="1" Margin="0,5,0,5"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="2" Margin="0,5,0,15" Height="30" FontSize="14"/>

        <TextBlock Text="Почта:" Grid.Row="3" Margin="0,5,0,5"/>
        <TextBox x:Name="MailBox" Grid.Row="4" Margin="0,5,0,15" Height="30" FontSize="14"/>

        <TextBlock Text="Пароль:" Grid.Row="5" Margin="0,5,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="6" Margin="0,5,0,15" Height="30" FontSize="14"/>

        <TextBlock Text="Подтвердите пароль:" Grid.Row="7" Margin="0,5,0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="8" Margin="0,5,0,20" Height="30" FontSize="14"/>


        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Зарегистрироваться" Width="130" Height="30" Margin="5" Click="RegisterButton_Click"/>
            <Button Content="Назад" Width="100" Height="30" Margin="5" Click="BackButton_Click"/>
        </StackPanel>
        <CheckBox x:Name="AgreementCheckBox" Content="Согласие на обработку данных" Grid.Row="10" Margin="0,10,0,0" Width="200"/>
    </Grid>
</Window>