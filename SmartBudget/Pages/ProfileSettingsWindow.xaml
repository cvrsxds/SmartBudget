<Window x:Class="SmartBudget.Pages.ProfileSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="191" Width="200"
        WindowStartupLocation="Manual" 
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
        <TextBlock x:Name="UsernameLabel" Width="150" FontStyle="Normal" FontFamily="Times New Roman" FontSize="14" TextWrapping="Wrap"/>
        <Button Content="Изменение профиля" Margin="0,0,0,10" Width="150" Click="EditProfile_Click"/>
        <Button Content="Настройки" Margin="0,0,0,10" Width="150" Click="SettingsButton_Click"/>
        <Button Content="Выход" Width="150" Click="ExitButton_Click"/>
    </StackPanel>
</Window>